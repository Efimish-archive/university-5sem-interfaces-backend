    "drizzle-dbml-generator": "^0.10.0",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "elysia": "1.4.17",
    "postgres": "^3.4.7",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bun": "1.3.3",
    "drizzle-kit": "^0.31.7"
  }
}
